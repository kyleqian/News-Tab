{
  "manifest_version": 2,
 
  "name": "News Tab",
  "description": "New tab, pulled article",
  "version": "1.0",
 
  // "browser_action": {
  //  "default_icon": "icon.png",
  //  "default_popup": "popup.html"
  // },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-1.11.3.min.js", "jquery.hotkeys.js", "settings.js", "content.js"],
      "match_about_blank": true,
      "all_frames": true
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage"
   ]
}